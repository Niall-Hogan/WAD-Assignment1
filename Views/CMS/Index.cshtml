@{ 
    Layout = "_CMS";
}

<h1>All Recipes</h1>


<table class="CmsTable">
    <tr>
        <th>Recipe Title</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

        <td>@item.Title</td>
        <td><a asp-controller="CMS" asp-action="UpdateRecipe" asp-route-id="@item.RecipeID" class="edit">Update</a></td>
        <td><a asp-controller="CMS" asp-action="DeleteRecipe" asp-route-id="@item.RecipeID" class="delete">Delete</a></td>
        </tr>
    }
</table>