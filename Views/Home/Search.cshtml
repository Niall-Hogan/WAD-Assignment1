@{
    ViewData["Title"] = "Recipe Search";

}

    <h1 class="contentTitle"`>Search</h1>
<form class="signIn" asp-action="Search" method="get">
    <div>

        <label class="signLbl" for="SearchString">Search by Name: </label>
        <input type="text" name="SearchString" id="SearchString" />

        <input type="submit" value="Filter" class="signInBtn" />

    </div>
</form>

<div>

    @if (ViewData["SearchString"] != null && (string)ViewData["SearchString"] != String.Empty)

    {

            <section class="RecipeFlexContainer">
        @foreach (var rec in Model)
        {

                <div class="RecipeContainer">
                    <img class="RecipeImage" src="~/images/FoodImages/@rec.Image" />
                    <div class="hoverEffect">
                        <div class="recTitleText">
                            <a id="linkToRec" asp-controller="Home" asp-action="RecipeDetails" asp-route-id="@rec.RecipeID">@rec.Title</a>
                        </div>
                    </div>

                </div>
        }
            </section>


        if (Model.Count == 0)


        {

            <p>Sorry no matches.</p>

        }

    }

</div>