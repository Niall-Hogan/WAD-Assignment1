<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" media="only screen and (min-width:720px)" href="~/css/desktop.css">
    <link href="~/css/mobile.css" rel="stylesheet" />


</head>
<body>

    <div class="siteContainer">
      
        <header title="Table of Food">
            <h1 id="siteHeading"> Recipe Website</h1>
            <nav>
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="AllRecipes">Home</a></li>
                    <li><a asp-area="" asp-controller="CMS" asp-action="AddRecipe">Add Recipes</a></li>
                    <li><a asp-area="" asp-controller="CMS" asp-action="Index">CMS Page</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Search">Search</a></li>


                </ul>
                
            </nav>
        </header>

        <div class="burgerMenu">
            <div class="bars">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
            </div>
        </div>




        <div class="mainContainer">
            <div class="signInContainer">

                @if (User.Identity.IsAuthenticated)
                {
                    <form id = "formContainer"asp-controller="Security" asp-action="SignOut" method="post">
                        <button type="submit" id="loginBtn">Log Out</button>
                    </form>
                }
                else
                {
                    <form id = "formContainer" >

                        <button asp-controller="Security" asp-action="SignIn" method="post" id="loginBtn">Log In</button>
                        </form>
                        }


                </div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer">
        </footer>
    </div>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
